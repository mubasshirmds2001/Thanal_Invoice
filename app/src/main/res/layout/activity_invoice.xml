<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".InvoiceActivity"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:fadeScrollbars="true">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Business Name and Logo -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="148dp"
            android:layout_height="127dp"
            android:layout_marginLeft="-120dp"
            android:src="@drawable/logo"
            />

        <TextView
            android:id="@+id/businessNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-90dp"
            android:text="THANAL EVENTS"
            android:textColor="@color/Blue"
            android:fontFamily="@font/gilroy_extrabold"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/contactTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SARALIKATTE 9880478873"
            android:textColor="@color/color"
            android:fontFamily="@font/calibri"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000000">

            <EditText
                android:id="@+id/clientEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Client Name"
                android:inputType="text"
                android:importantForAutofill="no"
                android:labelFor="@+id/clientEditText"
                tools:ignore="Autofill" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <!-- Add Item Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="10dp">

            <Spinner
                android:id="@+id/spinner_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                android:tooltipText="Items List"
                tools:ignore="DuplicateIds" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColorHint="#000000">

            <EditText
                android:id="@+id/quantityEditText"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:hint="Quantity"
                android:layout_marginLeft="15dp"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColorHint="#000000">

            <EditText
                android:id="@+id/rateEditText"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:hint="Rate"
                android:layout_marginLeft="10dp"
                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/addItemButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Add Item To list" />

    </LinearLayout>


    <!-- Invoice Items -->
    <ListView
        android:id="@+id/itemListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Total Amount -->
    <TextView
        android:id="@+id/totalAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Amount: Rs 0.00"
        android:layout_gravity="center"
        android:textColor="@color/Blue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Save PDF Button -->
    <Button
        android:id="@+id/savePdfButton"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:background="@drawable/button"
        android:text="Save as PDF" />

</LinearLayout>
